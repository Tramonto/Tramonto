###############################################################################
#
# beowulf nightly
#
###############################################################################

RUN (beowulf-nightly) {
    
    BUILD-LABEL         = default;
    BUILD-DIR           = BUILD;
    INVOKE-CONFIGURE    = linux-beowulf;
    TEST-CATEGORY       = FRAMEWORK;
    MAX-PROC            = 16;
    MPI-START           = lamboot;
    MPI-PING            = mpitask;
    MPI-STOP            = lamhalt;    
    TTR-DIR             = /common/TramontoTestHarness/TramontoTestResults;
    SSG-USERNAME        = jmwille;

}

