###############################################################################
#
# beefy nightly
#
###############################################################################

RUN (beefy-nightly) {
    
    BUILD-LABEL         = O3-t10.6-8proc;
    BUILD-DIR           = BUILD;
    INVOKE-CONFIGURE    = linux-beefy;
    TEST-CATEGORY       = FRAMEWORK;
    MAX-PROC            = 8;
    TTR-DIR             = /net/people/faculty/other/jwillen/work/TramontoTestHarness/TramontoTestResults;
    MPI-GO              = /usr/lib64/openmpi/bin/mpiexec -np ;
    SSG-USERNAME        = jmwille;

}

