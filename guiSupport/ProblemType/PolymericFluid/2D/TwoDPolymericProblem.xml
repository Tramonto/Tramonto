<Maui>

    <!--
        These files describe elements specific
        to a 1D Polymeric problem
    -->
    <!-- 
        this can be skipped becaue it's imported in 
        the 1D atomic problem 
        <Import filename="OneDSurfaces.xml"/>
    -->
    <Import filename="SurfaceInteractions2D3DPolymer.xml"/>
    <Import filename="BoundaryAndStateParameters2DPolymeric.xml" />

    <!--
        This is the actual class for a 1D atomic problem
    -->

    <Class type="TwoDPolymericProblem" label="2D Polymeric Problem"
        base="PolymericFluid">
        <Fields>
            <SurfaceEditor2D name="surfaceEditor2D" label="Surface types" 
                collapsible="true" beginCollapsed="true"/>
            <PolymerFunctionalsAndInteractions name="functionalsAndInteractions"
                label="Functionals and Interactions" collapsible="true" 
                beginCollapsed="true"/>
            <SurfaceInteractions2D3DPolymer name="surfaceInteractions2D3DPolymer"
                label="Surface Interactions" collapsible="true"
                beginCollapsed="true"/>
            <BoundaryConditions2DPolymeric name="boundaryConditions2DPolymeric"
                label="Boundary Conditions" collapsible="true"
                beginCollapsed="true"/>
            <ComputationalParameters2D name="computationalParametres2D"
                label="Computational Parameters" collapsible="true"
                beginCollapsed="true"/>
        </Fields>
    </Class>

</Maui>


