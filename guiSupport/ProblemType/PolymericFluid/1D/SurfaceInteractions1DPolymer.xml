<Maui>

    <!-- 
        We'll define six tables for the six unique
        sets of data the user may need to enter
        Lorentz-Berthelot mixing   (defined in SurfaceInteractions1D.xml)
          (single component specified)
        1) Sigma_ww
        2) Sigma_ww, Eps_ww
        3) Sigma_ww, Eps_ww, Cut_ww
        User defined mixing
          (two component specification)
        1) Sigma_ww, Sigma_wf
        2) Sigma_ww, Eps_ww, Sigma_wf, Eps_wf
        3) Sigma_ww, Eps_ww, Cut_ww, Sigma_wf, Eps_wf, Cut_wf

        Then these tables can be inserted in the appropriate
        classes below which indicate the users
        choice of surface interactions
    -->

    <Class type="UDSigmaWallTable1DPolymer" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface1" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="surface2" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

            <Table name="sigmaWallPolymerTable" label="Surface-Polymer data"
                collapsible="false">
                <Header name="sigmaWallPolymerTableHeader" 
                    label="Surface-Polymer data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="component" label="Polymer" 
                        path="root/fluidNames/componentsArray" 
                        output="dereference" />
                    <Integer name="block" label="Block" optional="false" />
                    <Double name="sigmaWF" label="Sigma_wf" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

        </Fields>
    </Class>

    <Class type="UDSigmaEpsWallTable1DPolymer" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface1" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="surface2" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

            <Table name="sigmaWallPolymerTable" label="Surface-Polymer data"
                collapsible="false">
                <Header name="sigmaWallPolymerTableHeader" 
                    label="Surface-Polymer data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="component" label="Polymer" 
                        path="root/fluidNames/componentsArray" 
                        output="dereference" />
                    <Integer name="block" label="Block" optional="false" />
                    <Double name="sigmaWF" label="Sigma_wf" default="0.0" 
                        optional="false" />
                    <Double name="epsWF" label="Eps_wf" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

        </Fields>
    </Class>

    <Class type="UDSigmaEpsCutWallTable1DPolymer" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface1" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="surface2" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                    <Double name="cutWW" label="Cut_ww" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

            <Table name="sigmaWallPolymerTable" label="Surface-Polymer data"
                collapsible="false">
                <Header name="sigmaWallPolymerTableHeader" 
                    label="Surface-Polymer data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="component" label="Polymer" 
                        path="root/fluidNames/componentsArray" 
                        output="dereference" />
                    <Integer name="block" label="Block" optional="false" />
                    <Double name="sigmaWF" label="Sigma_wf" default="0.0" 
                        optional="false" />
                    <Double name="epsWF" label="Eps_wf" default="0.0" 
                        optional="false" />
                    <Double name="cutWF" label="Cut_wf" default="0.0" 
                        optional="false" />

                </Header>
            </Table>

        </Fields>
    </Class>

    <!--
        These classes tie together the selection of mixing type and
        the fluid component data needed
    -->
    <Class type="MixingTypeSigmaWallTable1DPolymer"
        label="Mixing Rule (default Lorentz-Berthelot)">
    </Class>

        <Class type="MixingTypeLBSigmaWallTable1DPolymer"
            label="Lorentz-Berthelot" base="MixingTypeSigmaWallTable1DPolymer">
            <Fields>
                <LBSigmaWallTable1D name="lBSigmaWallTable1D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

        <Class type="MixingTypeUDSigmaWallTable1DPolymer"
            label="User defined" base="MixingTypeSigmaWallTable1DPolymer">
            <Fields>
                <UDSigmaWallTable1DPolymer name="uDSigmaWallTable1DPolymer" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

    <Class type="MixingTypeSigmaEpsWallTable1DPolymer"
        label="Mixing Rule (default Lorentz-Berthelot)">
    </Class>

        <Class type="MixingTypeLBSigmaEpsWallTable1DPolymer"
            label="Lorentz-Berthelot" base="MixingTypeSigmaEpsWallTable1DPolymer">
            <Fields>
                <LBSigmaEpsWallTable1D name="lBSigmaEpsWallTable1D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

        <Class type="MixingTypeUDSigmaEpsWallTable1DPolymer"
            label="User defined" base="MixingTypeSigmaEpsWallTable1DPolymer">
            <Fields>
                <UDSigmaEpsWallTable1DPolymer name="uDSigmaEpsWallTable1DPolymer" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

    <Class type="MixingTypeSigmaEpsCutWallTable1DPolymer"
        label="Mixing Rule (default Lorentz-Berthelot)">
    </Class>

        <Class type="MixingTypeLBSigmaEpsCutWallTable1DPolymer"
            label="Lorentz-Berthelot" base="MixingTypeSigmaEpsCutWallTable1DPolymer">
            <Fields>
                <LBSigmaEpsCutWallTable1D name="lBSigmaEpsCutWallTable1D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

        <Class type="MixingTypeUDSigmaEpsCutWallTable1DPolymer"
            label="User defined" base="MixingTypeSigmaEpsCutWallTable1DPolymer">
            <Fields>
                <UDSigmaEpsCutWallTable1DPolymer name="uDSigmaEpsCutWallTable1DPolymer" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>


    <!--
        This class ties together all of the specific 
        functional classes since it's the base class
    -->
    <Class type="SurfaceInteractions1DPolymer"
        label="Surface Interactions (default none)">
    </Class>

    <!--
       There are ten choices for wall interactions.
       All ten of these classes will be derrived from
       the SurfaceInteractions class above
    -->

    <Class type="NoWallSurfaceInteractions1DPolymer" label="none"
        base="SurfaceInteractions1DPolymer">
        <Fields>
            <Comment name="aComment">
                Current selection:
                No wall fluid interactions.

                No further data is required for this combination of functionals.
            </Comment>
        </Fields>
    </Class>

    <Class type="HardWallSurfaceInteractions1DPolymer" label="Hard wall"
        base="SurfaceInteractions1DPolymer">
        <Fields>
            <Comment name="aComment">
                Current selection:
                Walls are treated as hard spheres.

            </Comment>
            <MixingTypeSigmaWallTable1DPolymer name="mixingTypeSigmaWallTable1DPolymer"
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJ93SurfaceInteractions1DPolymer" label="Lennard-Jones 9-3"
        base="SurfaceInteractions1DPolymer">
        <Fields>
            <Comment name="aComment">
                Current selection:
                Walls are cut and shifted, 9-3 Lennard-Jones potentials.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1DPolymer 
                name="mixingTypeSigmaEpsCutWallTable1DPolymer"
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="NormLJ93SurfaceInteractions1DPolymer" 
        label="Normalized Lennard-Jones 9-3"
        base="SurfaceInteractions1DPolymer">
        <Fields>
            <Comment name="aComment">
                Current selection:
                Walls are a normalized, cut and shifted, 9-3 Lennard-Jones potential.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1DPolymer 
                name="mixingTypeSigmaEpsCutWallTable1DPolymer"
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJ126SurfaceInteractions1DPolymer" 
        label="Lennard-Jones 12-6"
        base="SurfaceInteractions1DPolymer">
        <Fields>
            <Comment name="aComment">
                Current selection:
                Walls are a numerically integrated, cut and shifted, 
                12-6 Lennard-Jones potential.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1DPolymer 
                name="mixingTypeSigmaEpsCutWallTable1DPolymer"
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJAtomicSurfaceInteractions1DPolymer" 
        label="Lennard-Jones atomic"
        base="SurfaceInteractions1DPolymer">
        <Fields>
            <Comment name="aComment">
                Current selection:
                Walls are an external field that assumes the fixed
                surfaces are atoms.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1DPolymer 
                name="mixingTypeSigmaEpsCutWallTable1DPolymer"
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="HardExpSurfaceInteractions1DPolymer" 
        label="Hard exponentials"
        base="SurfaceInteractions1DPolymer">
        <Fields>
            <Comment name="aComment">
                Current selection:
                Walls are hard exponential potentials.

            </Comment>
            <MixingTypeSigmaEpsWallTable1DPolymer 
                name="mixingTypeSigmaEpsCutWallTable1DPolymer"
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="HardChargedAtomsSurfaceInteractions1DPolymer" 
        label="Hard, charged atoms"
        base="SurfaceInteractions1DPolymer">
        <Fields>
            <Comment name="aComment">
                Current selection:
                Walls are hard sphere, charged atoms.

            </Comment>
            <MixingTypeSigmaWallTable1DPolymer 
                name="mixingTypeSigmaWallTable1DPolymer"
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="ChargedLJAtomsSurfaceInteractions1DPolymer" 
        label="Charged LJ atoms"
        base="SurfaceInteractions1DPolymer">
        <Fields>
            <Comment name="aComment">
                Current selection:
                Walls charged atoms with Lennard-Jones potentials.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1DPolymer 
                name="mixingTypeSigmaEpsCutWallTable1DPolymer"
                label="Surface component data"/>
        </Fields>
    </Class>


</Maui>