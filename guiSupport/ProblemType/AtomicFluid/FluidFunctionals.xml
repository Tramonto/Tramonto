    <!--
        This class ties together all of the specific 
        functional classes since it's the base class
    -->
    <Class type="FunctionalsAndInteractions"
        label="Functionals and Interactions (default all off)">
    </Class>

    <!--
       There are three choices of hard sphere functionals, 
       two choices of attractive functionals and
       three choices of coulombic functionals.  Since the
       data required for a simulation is highly dependent on 
       the combination of functionals the user selects,
       we'll ennumerate all 3*2*3=18 choices and let the
       user pick the exact combination they want.

       Extra indentation is used here to highlight
       the inheritance structure
    -->

    <Class type="NoHardSphereFunctional" label="No hard sphere functional"
        base="FunctionalsAndInteractions">
    </Class>    

        <Class type="NoHSNoAttractiveFunctional" label="No attractive functional"
            base="NoHardSphereFunctional">
        </Class>

            <Class type="NoHSNoAttNoCoulomb" label="No coulombic functional"
                base="NoHSNoAttractiveFunctional">
                <Fields>
                    <Comment name="aComment">
                        Current selection:
                        No Hard Sphere Functional
                        No Attractive Functional
                        No Coulombic Functional

                        No further data is required for this combination of functionals.
                    </Comment>
                    <DeBroglieWavelengthInChemPot name="deBroglieWavelenghtInChemPot"
                        label="deBroglie wavelenght in chemical potential"/>
                </Fields>
            </Class>

            <Class type="NoHSNoAttStrictCoulomb" label="Strict mean field"
                base="NoHSNoAttractiveFunctional">
                <Fields>
                    <Comment name="aComment">
                        Current selection:
                        No Hard Sphere Functional
                        No Attractive Functional
                        Strict Mean Field Coulombic Functional

                    </Comment>
                    <MixingTypeSigmaChargeFluidTable 
                        name="mixingTypeSigmaChargeFluidTable" 
                        label="Interaction parameters"/>
                </Fields>
            </Class>

            <Class type="NoHSNoAttSecondCoulomb" label="Second order"
                base="NoHSNoAttractiveFunctional">
                <Fields>
                    <Comment name="aComment">
                        Current selection:
                        No Hard Sphere Functional
                        No Attractive Functional
                        Mean Field with Second Order Corrections Coulombic Functional

                    </Comment>
                    <MixingTypeSigmaChargeFluidTable 
                        name="mixingTypeSigmaChargeFluidTable" 
                        label="Interaction parameters"/>
                </Fields>
            </Class>

        <Class type="NoHSStrictMeanFieldAttractiveFunctional" 
            label="Strict mean field"
            base="NoHardSphereFunctional"> 
            <!-- 
            remove the above base tag to disable this branch of the tree
            -->
        </Class>

            <Class type="NoHSStMFNoCoulomb" label="No coulombic functional"
                base="NoHSStrictMeanFieldAttractiveFunctional">
                <Fields>
