<Maui>

    <!--
        These files describe elements specific
        to a 2D Atomic problem
    -->
    <Import filename="TwoDSurfaces.xml"/>
    <Import filename="SurfaceInteractions2D3D.xml"/>
    <Import filename="BoundaryAndStateParameters2D.xml"/>
    <Import filename="ComputationalParameters2D.xml"/>
    
 
    <!--
        This is the actual class for a 2D atomic problem
    -->

    <Class type="TwoDAtomicProblem" label="2D Atomic Problem"
        base="AtomicFluid">
        <Fields>
            <SurfaceEditor2D name="surfaceEditor2D" label="Surface types" 
                collapsible="true" beginCollapsed="true"/>
            <FunctionalsAndInteractions name="functionalsAndInteractions"
                label="Functionals and Interactions" collapsible="true" 
                beginCollapsed="true"/>
            <SurfaceInteractions2D3D name="surfaceInteractions2D3D"
                label="Surface Interactions" collapsible="true"
                beginCollapsed="true"/>
            <BoundaryConditions2D name="boundaryConditions2D"
                label="Boundary Conditions" collapsible="true"
                beginCollapsed="true"/>
            <ComputationalParameters2D name="computationalParametres2D"
                label="Computational Parameters" collapsible="true"
                beginCollapsed="true"/>
        </Fields>
    </Class>


</Maui>


