<Maui>

    <!-- 
        We'll define six tables for the six unique
        sets of data the user may need to enter
        Lorentz-Berthelot mixing 
          (single component specified)
        1) Sigma_ww
        2) Sigma_ww, Eps_ww
        3) Sigma_ww, Eps_ww, Cut_ww
        User defined mixing
          (two component specification)
        1) Sigma_ww
        2) Sigma_ww, Eps_ww
        3) Sigma_ww, Eps_ww, Cut_ww

        Then these tables can be inserted in the appropriate
        classes below which indicate the users
        choice of surface interactions
    -->
    <Class type="LBSigmaWallTable2D3D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                </Header>
            </Table>
        </Fields>
    </Class>

    <Class type="LBSigmaEpsWallTable2D3D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                    <Double name="rhoW" label="Rho_w" default="0.0" 
                        optional="false" />

                </Header>
            </Table>
        </Fields>
    </Class>

    <Class type="LBSigmaEpsCutWallTable2D3D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                    <Double name="cutWW" label="Cut_wf" default="0.0" 
                        optional="false" />
                    <Double name="rhoW" label="Rho_w" default="0.0" 
                        optional="false" />
                </Header>
            </Table>
        </Fields>
    </Class>

    <Class type="UDSigmaWallTable2D3D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface1" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="surface2" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

            <Table name="sigmaWallFluidTable" label="Surface-Fluid data"
                collapsible="false">
                <Header name="sigmaWallFluidTableHeader" 
                    label="Surface-Fluid data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="component" label="Fluid" 
                        path="root/fluidNames/componentsArray" 
                        output="dereference" />
                    <Double name="sigmaWF" label="Sigma_wf" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

        </Fields>
    </Class>

    <Class type="UDSigmaEpsWallTable2D3D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface1" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="surface2" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                    <Double name="rhoW" label="Rho_w" default="0.0" 
                        optional="false" />
                </Header>
            </Table>
            <Comment name="rhoComment">
                Note: Rho_w is associated only with the surface in the first column
            </Comment>

            <Table name="sigmaEpsWallFluidTable" label="Surface-Fluid data"
                collapsible="false">
                <Header name="sigmaWallFluidTableHeader" 
                    label="Surface-Fluid data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="component" label="Fluid" 
                        path="root/fluidNames/componentsArray" 
                        output="dereference" />
                    <Double name="sigmaWF" label="Sigma_wf" default="0.0" 
                        optional="false" />
                    <Double name="epsWF" label="Eps_wf" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

        </Fields>
    </Class>

    <Class type="UDSigmaEpsCutWallTable2D3D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallEpsCutTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface1" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="surface2" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                    <Double name="cutWW" label="Cut_wf" default="0.0" 
                        optional="false" />
                    <Double name="rhoW" label="Rho_w" default="0.0" 
                        optional="false" />
                </Header>
            </Table>
            <Comment name="rhoComment">
                Note: Rho_w is associated only with the surface in the first column
            </Comment>

            <Table name="sigmaWallEpsCutFluidTable" label="Surface-Fluid data"
                collapsible="false">
                <Header name="sigmaWallFluidTableHeader" 
                    label="Surface-Fluid data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="component" label="Fluid" 
                        path="root/fluidNames/componentsArray" 
                        output="dereference" />
                    <Double name="sigmaWF" label="Sigma_wf" default="0.0" 
                        optional="false" />
                    <Double name="epsWF" label="Eps_wf" default="0.0" 
                        optional="false" />
                    <Double name="cutWF" label="Cut_wf" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

        </Fields>
    </Class>


    <!--
        These classes tie together the selection of mixing type and
        the fluid component data needed
    -->
    <Class type="MixingTypeSigmaWallTable2D3D"
        label="Mixing Rule (default Lorentz-Berthelot)">
    </Class>

        <Class type="MixingTypeLBSigmaWallTable2D3D"
            label="Lorentz-Berthelot" base="MixingTypeSigmaWallTable2D3D">
            <Fields>
                <LBSigmaWallTable2D3D name="lBSigmaWallTable2D3D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

        <Class type="MixingTypeUDSigmaWallTable2D3D"
            label="User defined" base="MixingTypeSigmaWallTable2D3D">
            <Fields>
                <UDSigmaWallTable2D3D name="uDSigmaWallTable2D3D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

    <Class type="MixingTypeSigmaEpsWallTable2D3D"
        label="Mixing Rule (default Lorentz-Berthelot)">
    </Class>

        <Class type="MixingTypeLBSigmaEpsWallTable2D3D"
            label="Lorentz-Berthelot" base="MixingTypeSigmaEpsWallTable2D3D">
            <Fields>
                <LBSigmaEpsWallTable2D3D name="lBSigmaEpsWallTable2D3D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

        <Class type="MixingTypeUDSigmaEpsWallTable2D3D"
            label="User defined" base="MixingTypeSigmaEpsWallTable2D3D">
            <Fields>
                <UDSigmaEpsWallTable2D3D name="uDSigmaEpsWallTable2D3D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

    <Class type="MixingTypeSigmaEpsCutWallTable2D3D"
        label="Mixing Rule (default Lorentz-Berthelot)">
    </Class>

        <Class type="MixingTypeLBSigmaEpsCutWallTable2D3D"
            label="Lorentz-Berthelot" base="MixingTypeSigmaEpsCutWallTable2D3D">
            <Fields>
                <LBSigmaEpsCutWallTable2D3D name="lBSigmaEpsCutWallTable2D3D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

        <Class type="MixingTypeUDSigmaEpsCutWallTable2D3D"
            label="User defined" base="MixingTypeSigmaEpsCutWallTable2D3D">
            <Fields>
                <UDSigmaEpsCutWallTable2D3D name="uDSigmaEpsCutWallTable2D3D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>


    <!--
        This class ties together all of the specific 
        functional classes since it's the base class
    -->
    <Class type="SurfaceInteractions2D3D"
        label="Surface Interactions (default none)">
    </Class>

    <!--
       There are ten choices for wall interactions.
       All ten of these classes will be derrived from
       the SurfaceInteractions class above
    -->

    <Class type="NoWallSurfaceInteractions2D3D" label="none"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                No wall fluid interactions.

                No further data is required for this combination of functionals.
            </Comment>
        </Fields>
    </Class>

    <Class type="HardWallSurfaceInteractions2D3D" label="Hard wall"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are treated as hard spheres.

            </Comment>
            <MixingTypeSigmaWallTable2D3D name="mixingTypeSigmaWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJ93SurfaceInteractions2D3D" label="Lennard-Jones 9-3"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are cut and shifted, 9-3 Lennard-Jones potentials.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable2D3D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="NormLJ93SurfaceInteractions2D3D" label="Normalized Lennard-Jones 9-3"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are a normalized, cut and shifted, 9-3 Lennard-Jones potential.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable2D3D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJ126SurfaceInteractions2D3D" label="Lennard-Jones 12-6"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are a numerically integrated, cut and shifted, 
                12-6 Lennard-Jones potential.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable2D3D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJAtomicSurfaceInteractions2D3D" label="Lennard-Jones atomic"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are an external field that assumes the fixed
                surfaces are atoms.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable2D3D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJStepSurfaceInteractions2D3D" label="Lennard-Jones, stepped"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are stepped Lennard-Jones potentials.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable2D3D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="HardExpSurfaceInteractions2D3D" label="Hard exponentials"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are hard exponential potentials.

            </Comment>
            <MixingTypeSigmaEpsWallTable2D3D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="HardChargedAtomsSurfaceInteractions2D3D" label="Hard, charged atoms"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are hard sphere, charged atoms.

            </Comment>
            <MixingTypeSigmaWallTable2D3D name="mixingTypeSigmaWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="ChargedLJAtomsSurfaceInteractions2D3D" label="Charged LJ atoms"
        base="SurfaceInteractions2D3D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls charged atoms with Lennard-Jones potentials.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable2D3D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>


</Maui>