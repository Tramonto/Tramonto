<Maui>
    <!-- 
        **************2D Surface Classes************************* 
    -->
    <Class type="SurfaceType2D" label="(default Infinite planar wall)" 
        collapsible="false"/>
  
    <Class label="Infinite planar wall" type="InfinitePlanarWall2D" 
        base="SurfaceType2D">
        <Fields>
            <Double name="halfThickness" label="Half thickness" default="0.0"
                lower="0" optional="false"/>
            <String name="surfaceNormal" label="Surface Normal">
                <Menu options="x|y"/>
            </String> 
        </Fields>
    </Class>
  
    <Class label="Finite planar wall" type="FinitePlanarWall2D" 
        base="SurfaceType2D">
        <Fields>
            <Double name="halfThickness1" label="Half thickness (Len)" 
                default="0.0" lower="0" optional="false"/>
            <Double name="halfThickness2" label="Half thickness (Wid)" 
                default="0.0" lower="0" optional="false"/>
            <Double name="halfThickness3" label="Half thickness (Dep)" 
                default="0.0" lower="0" optional="false"/>
            <String name="surfaceNormal" label="Surface Normal">
                <Menu options="x|y"/>
            </String>
        </Fields>
    </Class>
  
    <Class label="Colloids (2D cylinders)" type="Colloids2D" 
        base="SurfaceType2D">
        <Fields>
            <Double name="radius" label="Radius" default="0.0" lower="0" 
                optional="false"/>
        </Fields>
    </Class>
  
    <Class label="Pore (2D cylindrical pore)" type="Pore2D" 
        base="SurfaceType2D">
        <Fields>
            <Double name="radius" label="Radius" default="0.0" lower="0" 
                optional="false"/>
        </Fields>
    </Class>
  
    <Class label="Atomic centers" type="Atoms2D" base="SurfaceType2D">
      <Fields/>
    </Class>
  
    <Class label="Finite pore (slit)" type="FinitePore2D" base="SurfaceType2D">
        <Fields>
            <Double name="radius" label="Radius" default="0.0" lower="0" 
                optional="false"/>
            <Double name="length" label="Length" default="0.0" lower="0" 
                optional="false"/>
            <String name="longAxis" label="Long axis direction">
                <Menu options="x|y"/>
            </String>
        </Fields>
    </Class>
  
    <Class label="Finite pore (taper)" type="FinitePoreTaper2D" 
        base="SurfaceType2D">
        <Fields>
            <Double name="radiusLBB" label="Radius (lbb)" default="0.0" 
                lower="0" optional="false"/>
            <Double name="radiusRTF" label="Radius (rtf)" default="0.0" 
                lower="0" optional="false"/>
            <Double name="length" label="Length" default="0.0" lower="0" 
                optional="false"/>
            <String name="longAxis" label="Long axis direction">
                <Menu options="x|y"/>
            </String>
        </Fields>
    </Class>
  
    <Class label="Random (cylinder)" type="RandomCylSphere2D" 
        base="SurfaceType2D">
        <Fields>
            <Double name="radius" label="Radius" default="0.0" lower="0" 
                optional="false"/>
        </Fields>
    </Class>
  
    <!--
        This panel and following class let one pick 2D surfaces
    -->

    <Class label="Add surfaces" type="PanelOfSurfaces2D" collapsible="false">
        <Fields>
            <Reference name="name" label="Surface name" 
                path="root/surfaceNames/surfaceArray"/>
            <SurfaceType2D name="surfaces" label="2D surfaces"/>
        </Fields>
    </Class>

    <Class type="SurfaceEditor2D" label="Two dimensional surfaces">
        <Fields>
            <Integer name="nWall" label="Total number of surfaces (including duplicates)" 
                default="0" lower="0" optional="false"/>
            <Boolean name="autoCenter" 
		label="Automatically center surfaces in the center of the computational domain" 
                default="false"/>
            <Array name="surfacesArray" label="Surfaces" collapsible="true">
                <Master label="$name">
                    <PanelOfSurfaces2D name="theSurfacesPanel" 
                        label="Surfaces"/>
                </Master>
            </Array>
        </Fields>
    </Class>

</Maui>
