<Maui>

    <!-- 
        We'll define six tables for the six unique
        sets of data the user may need to enter
        Lorentz-Berthelot mixing 
          (single component specified)
        1) Sigma_ww
        2) Sigma_ww, Eps_ww
        3) Sigma_ww, Eps_ww, Cut_ww
        User defined mixing
          (two component specification)
        1) Sigma_ww, Sigma_wf
        2) Sigma_ww, Eps_ww, Sigma_wf, Eps_wf
        3) Sigma_ww, Eps_ww, Cut_ww, Sigma_wf, Eps_wf, Cut_wf

        Then these tables can be inserted in the appropriate
        classes below which indicate the users
        choice of surface interactions
    -->
    <Class type="LBSigmaWallTable1D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                </Header>
            </Table>
        </Fields>
    </Class>

    <Class type="LBSigmaEpsWallTable1D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                    <Double name="rhoW" label="Rho_w" default="0.0" 
                        optional="false" />
                </Header>
            </Table>
        </Fields>
    </Class>

    <Class type="LBSigmaEpsCutWallTable1D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                    <Double name="cutWW" label="Cut_ww" default="0.0" 
                        optional="false" />
                    <Double name="rhoW" label="Rho_w" default="0.0" 
                        optional="false" />
                </Header>
            </Table>
        </Fields>
    </Class>

    <Class type="UDSigmaWallTable1D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface1" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="surface2" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

            <Table name="sigmaWallFluidTable" label="Surface-Fluid data"
                collapsible="false">
                <Header name="sigmaWallFluidTableHeader" 
                    label="Surface-Fluid data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="component" label="Fluid" 
                        path="root/fluidNames/componentsArray" 
                        output="dereference" />
                    <Double name="sigmaWF" label="Sigma_wf" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

        </Fields>
    </Class>

    <Class type="UDSigmaEpsWallTable1D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface1" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="surface2" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                    <Double name="rhoW" label="Rho_w" default="0.0" 
                        optional="false" />
                </Header>
            </Table>
            <Comment name="rhoComment">
                Note: Rho_w is associated only with the surface in the first column
            </Comment>

            <Table name="sigmaWallFluidTable" label="Surface-Fluid data"
                collapsible="false">
                <Header name="sigmaWallFluidTableHeader" 
                    label="Surface-Fluid data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="component" label="Fluid" 
                        path="root/fluidNames/componentsArray" 
                        output="dereference" />
                    <Double name="sigmaWF" label="Sigma_wf" default="0.0" 
                        optional="false" />
                    <Double name="epsWF" label="Eps_wf" default="0.0" 
                        optional="false" />
                </Header>
            </Table>

        </Fields>
    </Class>

    <Class type="UDSigmaEpsCutWallTable1D" label="Surface component data">
        <Fields>
            <Table name="sigmaWallTable" label="Surface component data"
                collapsible="false">
                <Header name="sigmaWallTableHeader" 
                    label="Surface component data">
                    <Reference name="surface1" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="surface2" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Double name="sigmaWW" label="Sigma_ww" default="0.0" 
                        optional="false" />
                    <Double name="epsWW" label="Eps_ww" default="0.0" 
                        optional="false" />
                    <Double name="cutWW" label="Cut_ww" default="0.0" 
                        optional="false" />
                    <Double name="rhoW" label="Rho_w" default="0.0" 
                        optional="false" />
                </Header>
            </Table>
            <Comment name="rhoComment">
                Note: Rho_w is associated only with the surface in the first column
            </Comment>

            <Table name="sigmaWallFluidTable" label="Surface-Fluid data"
                collapsible="false">
                <Header name="sigmaWallFluidTableHeader" 
                    label="Surface-Fluid data">
                    <Reference name="surface" label="Surface" 
                        path="root/surfaceNames/surfaceArray" 
                        output="dereference" />
                    <Reference name="component" label="Fluid" 
                        path="root/fluidNames/componentsArray" 
                        output="dereference" />
                    <Double name="sigmaWF" label="Sigma_wf" default="0.0" 
                        optional="false" />
                    <Double name="epsWF" label="Eps_wf" default="0.0" 
