    </Class>

    <!--
        These classes tie together the selection of mixing type and
        the fluid component data needed
    -->
    <Class type="MixingTypeSigmaWallTable1D"
        label="Mixing Rule (default Lorentz-Berthelot)">
    </Class>

        <Class type="MixingTypeLBSigmaWallTable1D"
            label="Lorentz-Berthelot" base="MixingTypeSigmaWallTable1D">
            <Fields>
                <LBSigmaWallTable1D name="lBSigmaWallTable1D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

        <Class type="MixingTypeUDSigmaWallTable1D"
            label="User defined" base="MixingTypeSigmaWallTable1D">
            <Fields>
                <UDSigmaWallTable1D name="uDSigmaWallTable1D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

    <Class type="MixingTypeSigmaEpsWallTable1D"
        label="Mixing Rule (default Lorentz-Berthelot)">
    </Class>

        <Class type="MixingTypeLBSigmaEpsWallTable1D"
            label="Lorentz-Berthelot" base="MixingTypeSigmaEpsWallTable1D">
            <Fields>
                <LBSigmaEpsWallTable1D name="lBSigmaEpsWallTable1D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

        <Class type="MixingTypeUDSigmaEpsWallTable1D"
            label="User defined" base="MixingTypeSigmaEpsWallTable1D">
            <Fields>
                <UDSigmaEpsWallTable1D name="uDSigmaEpsWallTable1D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

    <Class type="MixingTypeSigmaEpsCutWallTable1D"
        label="Mixing Rule (default Lorentz-Berthelot)">
    </Class>

        <Class type="MixingTypeLBSigmaEpsCutWallTable1D"
            label="Lorentz-Berthelot" base="MixingTypeSigmaEpsCutWallTable1D">
            <Fields>
                <LBSigmaEpsCutWallTable1D name="lBSigmaEpsCutWallTable1D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>

        <Class type="MixingTypeUDSigmaEpsCutWallTable1D"
            label="User defined" base="MixingTypeSigmaEpsCutWallTable1D">
            <Fields>
                <UDSigmaEpsCutWallTable1D name="uDSigmaEpsCutWallTable1D" 
                    label="Interaction diameters"/>
            </Fields>
        </Class>


    <!--
        This class ties together all of the specific 
        functional classes since it's the base class
    -->
    <Class type="SurfaceInteractions1D"
        label="Surface Interactions (default none)">
    </Class>

    <!--
       There are ten choices for wall interactions.
       All ten of these classes will be derrived from
       the SurfaceInteractions class above
    -->

    <Class type="NoWallSurfaceInteractions1D" label="none"
        base="SurfaceInteractions1D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                No wall fluid interactions.

                No further data is required for this combination of functionals.
            </Comment>
        </Fields>
    </Class>

    <Class type="HardWallSurfaceInteractions1D" label="Hard wall"
        base="SurfaceInteractions1D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are treated as hard spheres.

            </Comment>
            <MixingTypeSigmaWallTable1D name="mixingTypeSigmaWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJ93SurfaceInteractions1D" label="Lennard-Jones 9-3"
        base="SurfaceInteractions1D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are cut and shifted, 9-3 Lennard-Jones potentials.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="NormLJ93SurfaceInteractions1D" label="Normalized Lennard-Jones 9-3"
        base="SurfaceInteractions1D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are a normalized, cut and shifted, 9-3 Lennard-Jones potential.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJ126SurfaceInteractions1D" label="Lennard-Jones 12-6"
        base="SurfaceInteractions1D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are a numerically integrated, cut and shifted, 
                12-6 Lennard-Jones potential.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="LJAtomicSurfaceInteractions1D" label="Lennard-Jones atomic"
        base="SurfaceInteractions1D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are an external field that assumes the fixed
                surfaces are atoms.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="HardExpSurfaceInteractions1D" label="Hard exponentials"
        base="SurfaceInteractions1D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are hard exponential potentials.

            </Comment>
            <MixingTypeSigmaEpsWallTable1D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="HardChargedAtomsSurfaceInteractions1D" label="Hard, charged atoms"
        base="SurfaceInteractions1D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls are hard sphere, charged atoms.

            </Comment>
            <MixingTypeSigmaWallTable1D name="mixingTypeSigmaWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>

    <Class type="ChargedLJAtomsSurfaceInteractions1D" label="Charged LJ atoms"
        base="SurfaceInteractions1D">
        <Fields>
            <Double name="maxPotential" label="External potential maximum" default="10" />
            <Comment name="aComment">
                Current selection:
                Walls charged atoms with Lennard-Jones potentials.

            </Comment>
            <MixingTypeSigmaEpsCutWallTable1D name="mixingTypeSigmaEpsCutWallTable" 
                label="Surface component data"/>
        </Fields>
    </Class>


</Maui>