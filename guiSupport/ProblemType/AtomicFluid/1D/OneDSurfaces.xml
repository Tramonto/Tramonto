<Maui>

    <!-- 
        **************1D Surface Classes************************* 
    -->
    <Class type="SurfaceType1D" label="(default Infinite planar wall)"
        collapsible="false"/>

    <Class label="Infinite planar wall" type="InfinitePlanarWall" 
        base="SurfaceType1D">
        <Fields>
            <Double name="halfThickness" label="Half thickness" default="0.0" 
                lower="0" optional="false"/>
        </Fields>
    </Class>

    <Class label="Finite planar wall" type="FinitePlanarWall" 
        base="SurfaceType1D">
        <Fields>
            <Double name="halfThickness1" label="Half thickness (Len)" 
                default="0.0" lower="0" optional="false"/>
            <Double name="halfThickness2" label="Half thickness (Wid)" 
                default="0.0" lower="0" optional="false"/>
            <Double name="halfThickness3" label="Half thickness (Dep)" 
                default="0.0" lower="0" optional="false"/>
        </Fields>
    </Class>

    <!--
        A panel and editor for selecting a set of surfaces
    -->
    <Class type="PanelOfSurfaces1D" label="Add surfaces" collapsible="false">
        <Fields>
            <Reference name="Refname" label="Surface name" 
                path="root/surfaceNames/surfaceArray" output="reference" />
            <SurfaceType1D name="surfaces" label="1D surfaces"/>
        </Fields>
    </Class>

    <Class type="SurfaceEditor1D" label="One dimensional surfaces">
        <Fields>
            <Integer name="nWall" label="Total number of surfaces (including duplicates)" 
                default="0" lower="0" optional="false"/>
            <Boolean name="autoCenter" 
                label="Automatically center surfaces in the center of the computational domain" 
                default="false"/>
            <Array name="surfacesArray" label="Surface Editor" 
                collapsible="true">
                <Master label="$Refname">
                    <PanelOfSurfaces1D name="theSurfacesPanel" 
                        label="Surfaces"/>
                </Master>
            </Array>
        </Fields>
    </Class>

</Maui>
