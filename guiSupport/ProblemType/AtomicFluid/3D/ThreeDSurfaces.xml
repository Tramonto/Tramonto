<Maui>

    <!-- 
        **************3D Surface Classes************************* 
    -->
    <Class type="SurfaceType3D" label="(default Infinite planar wall)" 
        collapsible="false"/>
  
    <Class type="InfinitePlanarWall3D" label="Infinite planar wall" 
        base="SurfaceType3D">
        <Fields>
            <Double name="halfThickness" label="Half thickness" default="0.0"
                lower="0" optional="false"/>
            <String name="surfaceNormal" label="Surface Normal">
                <Menu options="x|y|z"/>
            </String>
        </Fields>
    </Class>
  
    <Class type="FinitePlanarWall3D" label="Finite planar wall" 
        base="SurfaceType3D">
        <Fields>
            <Double name="halfThickness1" label="Half thickness (Len)" 
                default="0.0" lower="0" optional="false"/>
            <Double name="halfThickness2" label="Half thickness (Wid)" 
                default="0.0" lower="0" optional="false"/>
            <Double name="halfThickness3" label="Half thickness (Dep)" 
                default="0.0" lower="0" optional="false"/>
            <String name="surfaceNormal" label="Surface Normal">
                <Menu options="x|y|z"/>
            </String>
        </Fields>
    </Class>
  
    <Class type="Colloids3D" label="Colloids (3D spheres)" base="SurfaceType3D">
        <Fields>
            <Double name="radius" label="Radius" default="0.0" lower="0" 
                optional="false"/>
        </Fields>
    </Class>
  
    <Class type="Pore3D" label="Pore (3D spherical cavity)" 
        base="SurfaceType3D">
        <Fields>
            <Double name="radius" label="Radius" default="0.0" lower="0" 
                optional="false"/>
        </Fields>
    </Class>
  
    <Class type="Atoms3D" label="Atomic centers" base="SurfaceType3D">
        <Fields/>
    </Class>
  
    <Class type="FinitePore3D" label="Finite pore (cylinder)" 
        base="SurfaceType3D">
        <Fields>
            <Double name="radius" label="Radius" default="0.0" lower="0" 
                optional="false"/>
            <Double name="length" label="Length" default="0.0" lower="0" 
                optional="false"/>
            <String name="longAxis" label="Long axis direction">
                <Menu options="x|y|z"/>
            </String>
        </Fields>
    </Class>
  
    <Class label="Finite pore (cone)" type="FinitePoreTaper3D" 
        base="SurfaceType3D">
        <Fields>
            <Double name="radiusLBB" label="Radius (lbb)" default="0.0" 
                lower="0" optional="false"/>
            <Double name="radiusRTF" label="Radius (rtf)" default="0.0" 
                lower="0" optional="false"/>
            <Double name="length" label="Length" default="0.0" lower="0" 
                optional="false"/>
            <String name="longAxis" label="Long axis direction">
                <Menu options="x|y|z"/>
            </String>
        </Fields>
    </Class>
  
    <Class type="FiniteCylinder3D" label="Finite cylinder" 
        base="SurfaceType3D">
        <Fields>
            <Double name="radius" label="Radius" default="0.0" lower="0" 
                optional="false"/>
            <Double name="length" label="Length" default="0.0" lower="0" 
                optional="false"/>
            <String name="longAxis" label="Long axis direction">
                <Menu options="x|y|z"/>
            </String>
      </Fields>
    </Class>
  
    <Class type="PeriodicCylinder3D" label="Periodic cylinder" 
        base="SurfaceType3D">
        <Fields>
            <Double name="meanRadius" label="Mean radius" default="0.0" 
                lower="0"/>
            <Double name="amplitude" label="Amplitude" default="0.0" lower="0"/>
            <Double name="periodLength" label="Period length" default="0.0" 
                lower="0"/>
            <String name="longAxis" label="Long axis direction">
                <Menu options="x|y|z"/>
            </String>
        </Fields>
    </Class>
  
    <Class type="RandomCylSphere3D" label="Random (sphere)" 
        base="SurfaceType3D">
        <Fields>
            <Double name="radius" label="Radius" default="0.0" lower="0" 
                optional="false"/>
        </Fields>
    </Class>

    <!--
        A panel and class for editing 3D surfaces
    -->
    <Class label="Add surfaces" type="PanelOfSurfaces3D" collapsible="false">
        <Fields>
            <Reference name="name" label="Surface name" 
                path="root/surfaceNames/surfaceArray"/>
            <SurfaceType3D name="surfaces" label="3D surfaces"/>
        </Fields>
    </Class>

    <Class type="SurfaceEditor3D" label="Three dimensional surfaces">
        <Fields>
            <Integer name="nWall" label="Total number of surfaces (including duplicates)" 
                default="0" lower="0" optional="false"/>
            <Boolean name="autoCenter" 
                label="Automatically center surfaces in the center of the computational domain" 
                default="false"/>
            <Array name="surfacesArray" label="Surfaces" collapsible="true">
                <Master label="$name">
                    <PanelOfSurfaces3D name="theSurfacesPanel" 
                        label="Surfaces"/>
                </Master>
            </Array>
        </Fields>
    </Class>

</Maui>
