<Maui RootClass="Services">


<!-- 
    import files that contain class definitions common
    to the entire interface
-->
<Import filename="commonXML/TramontoUnits.xml"/>
<Import filename="commonXML/TramontoFluidNames.xml"/>
<Import filename="commonXML/TramontoSurfaceNames.xml"/>

<!-- 
    Import the xml that leads the user down
    the decision tree on (Atomic or Polymeric)
    and (1D or 2D or 3D) problems.

    Gui elements particular to these problem
    types are also segregated within the
    ProblemType directory
-->
<Import filename="ProblemType/ProblemType.xml"/>


<!-- 
    Here's the top level class that defines the interface.
    It extends the "Services" class so that Idea/Maui
    can put it in its top level menu
-->

<Class type="TramontoDFT" 
    label="TRAMONTO: Density functional theory simulation" 
    base="Services" collapsible="false" beginCollapsed="false" >
    <Fields>
        <String name="simulationInputFileName" 
            label="Simulation input file name"
            default="dft_input_new.dat" />

        <TramontoUnits name="tramontoUnits" label="Dimensional units"/>
        <FluidNames name="fluidNames" label="Fluid/Component names"/>
        <SurfaceNames name="surfaceNames" label="Surface names"/>
        <ProblemType name="problemType" label="Problem description"
            collapsible="true" beginCollapsed="false"/>

    </Fields>
</Class>

</Maui>


